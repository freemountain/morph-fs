{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "strict": true,
        "sourceMap": false,
        "declaration": true,
        "removeComments": false,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "stripInternal": true,
        "typeRoots": [ "node_modules/@types"],
        "types": [ "node", "mocha" ],
        "downlevelIteration": true,
        "importHelpers": false,
        "lib": [ "es2015" ],
        "rootDir": "./src",
        "outDir": "./dist",
    },
    "exclude": [
        "./dist",
        "node_modules"
    ],
    "compileOnSave":  true
}
